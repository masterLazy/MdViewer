<Window x:Class="MdViewer.SampleEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MdViewer.SampleEditor"
        xmlns:md="clr-namespace:MdViewer;assembly=MdViewer"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1200"
        x:Name="root">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <TextBox Grid.Column="0" x:Name="Editor" FontSize="14" TextChanged="Editor_TextChanged"
                 AcceptsReturn="True" AcceptsTab="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"/>
        <md:Markdown Grid.Column="1" x:Name="MdViewer" FontSize="16"/>
    </Grid>
</Window>
